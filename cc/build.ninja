cflags = -Wall -std=c++14
ldflags = -Llib/antlr4-macos -lantlr4-runtime
includes = -Iinclude
antlr4 = java -jar /usr/local/lib/antlr-4.7-complete.jar

rule mkdirp
  command = mkdir -p $out

rule cc
  depfile = $out.d
  command = g++ -MMD -MF $out.d $cflags $includes -c $in -o $out

rule cc_antlr
  depfile = $out.d 
  command = g++ -MMD -MF $out.d $cflags -Iinclude/antlr -c $in -o $out

rule ld
  command = g++ $ldflags $in -o $out

rule antlr 
  command = $antlr4 -Dlanguage=Cpp $in

rule runtests
  command = $in

build src/dmcql/DMCQL.tokens $
      src/ql/DMCQLBaseListener.cpp $
      src/ql/DMCQLBaseListener.h $
      src/ql/DMCQLLexer.cpp $
      src/ql/DMCQLLexer.h $
      src/ql/DMCQLLexer.tokens $
      src/ql/DMCQLListener.cpp $
      src/ql/DMCQLListener.h $
      src/ql/DMCQLParser.cpp $
      src/ql/DMCQLParser.h $
      : antlr src/ql/DMCQL.g4

build gen_parser: phony src/ql/DMCQL.tokens $
      src/ql/DMCQLBaseListener.cpp $
      src/ql/DMCQLBaseListener.h $
      src/ql/DMCQLLexer.cpp $
      src/ql/DMCQLLexer.h $
      src/ql/DMCQLLexer.tokens $
      src/ql/DMCQLListener.cpp $
      src/ql/DMCQLListener.h $
      src/ql/DMCQLParser.cpp $
      src/ql/DMCQLParser.h

build out/ql: mkdirp
build out/ql/parser.o: cc src/ql/parser.cpp || out/ql gen_parser
  cflags = $cflags -Iinclude/antlr4
build out/ql/DMCQLBaseListener.o: cc src/ql/DMCQLBaseListener.cpp
  cflags = $cflags -Iinclude/antlr4
build out/ql/DMCQLLexer.o: cc src/ql/DMCQLLexer.cpp
  cflags = $cflags -Iinclude/antlr4
build out/ql/DMCQLListener.o: cc src/ql/DMCQLListener.cpp
  cflags = $cflags -Iinclude/antlr4
build out/ql/DMCQLParser.o: cc src/ql/DMCQLParser.cpp
  cflags = $cflags -Iinclude/antlr4

build parsertest: ld $
  out/ql/parser.o $
  out/ql/DMCQLBaseListener.o $
  out/ql/DMCQLLexer.o $
  out/ql/DMCQLListener.o $
  out/ql/DMCQLParser.o

build out/dmc12.o: cc src/dmc12.cpp
build out/tcp_server.o: cc src/tcp_server.cpp
build out/main.o: cc src/main.cpp
build dmc12: ld out/main.o out/tcp_server.o out/dmc12.o

build test/main.o: cc test/main.cpp
build test/run_tests: ld test/main.o 
build test: phony _test
build _test: runtests test/run_tests

default dmc12
